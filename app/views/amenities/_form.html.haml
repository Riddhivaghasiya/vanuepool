= form_with(model: amenity, local: true) do |form|
  - if amenity.errors.any?
    #error_explanation
      %h2
        = pluralize(amenity.errors.count, "error")
        prohibited this amenity from being saved:
      %ul
        - amenity.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_field :name
  .actions
    = form.submit
